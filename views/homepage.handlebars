<ol class="post-list">
    <!-- the #each Handlebars.js helper allows HTML code to render
    an object in each iteration-->
    {{#each posts as |post|}}
    <li>
        <article class="post">
        <div class="title">
            <a href="{{post_url}}" target="_blank">{{title}}</a>
            <span>({{post_url}})</span>
        </div>
        <div class="meta">
            {{vote_count}} point(s) by {{user.username}} on
            {{created_at}}
            |
            <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
        </div>
        </article>
    </li>
    {{/each}}
</ol>